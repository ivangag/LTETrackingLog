<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutNetworkInfoItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewNetworkSummary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/btnShowNetworkInfoMap"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:text="TEST"
        android:layout_toLeftOf="@+id/btnShowNetworkInfoMap" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonShowMap"
        android:id="@+id/btnShowNetworkInfoMap"
        style="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_dark" />
</RelativeLayout>